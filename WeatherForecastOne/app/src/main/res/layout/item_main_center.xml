<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_center_tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="周六" />

    <TextView
        android:id="@+id/item_center_tv_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_center_tv_data"
        android:textSize="16sp"
        tools:text="晴" />

    <TextView
        android:id="@+id/item_center_tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        tools:text="27~14℃" />

    <ImageView
        android:id="@+id/item_center_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/item_center_tv_temp"
        tools:src="@drawable/icon_add" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_center_tv_data"
        android:background="#E0E0E0"
        android:layout_marginTop="5dp"/>

</RelativeLayout>